<div class="container" id="form-container">
  <h2>Sign Up</h2>
  <p>Fill in your details below to start creating your digital family tree today!</p>
  <form method="POST" action="/signup">
    <div class="form-row">
      <div class="form-group col">
        <label for="first_name">First Name:</label>
        <input type="text" class="form-control" id="first_name" name="first_name" required>
      </div>
      <div class="form-group col">
        <label for="last_name">Last Name:</label>
        <input type="text" class="form-control" id="last_name" name="last_name" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col">
        <label for="date_of_birth">Your Date of Birth:</label>
        <input type="date" class="form-control" id="date_of_birth" name="date_of_birth" required>
      </div>
      <div class="form-group col">
        <label for="sex">Your Gender:</label>
        <select class="form-control" id="sex" name="sex" required>
          <option value=0>Male</option>
          <option value=1>Female</option>
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col">
        <label for="email">Your Email:</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <div class="form-group col">
        <label for="password">Your Password:</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>
    </div>
    <div class="form-group">
      <label for="biography">Short Biography:</label>
      <textarea class="form-control" id="biography" name="biography" required></textarea>
    </div>
    <div class="form-group" id="submitbtn-container">
      <input type="submit" class="btn btn-primary" id="formsubmit" value="Submit">
    </div>
  </form>
</div>
